@model apka2.Models.Procedure

@{
    ViewData["Title"] = "Delete";
    var sessions = (IQueryable<ProcedureSession>)ViewData["sessions"];
}

<h3>Czy napewno chcesz usunąć zabieg?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SurveyId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SurveyId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProcedureDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProcedureDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ECMO)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ECMO)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Filter)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Filter)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProcedureTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProcedureTime)
        </dd>
        @if (Model.Anticoagulation != "Cytrynian")
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ExtracorporealClearingMethod)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ExtracorporealClearingMethod)
            </dd>
        } else
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CitrateConcentrate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CitrateConcentrate)
            </dd>
        }
        @if (Model.WasEnded)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UnplanedTermination)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UnplanedTermination)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TerminationReason)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TerminationReason)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BloodReturn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BloodReturn)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PatientDeath)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PatientDeath)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DeathDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DeathDate)
            </dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Remarks)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Remarks)
        </dd>
    </dl>
    
    <h3>Punkty kontrolne</h3>
    <hr>

    @if (sessions.Count() != 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Lp.
                    </th>
                    <th>
                        QB [mg/min]
                    </th>
                    <th>
                        QD [mg/h]
                    </th>
                    <th>
                        Predylucja [mg/h]
                    </th>
                    <th>
                        Postdylucja [mg/h]
                    </th>
                    <th>
                        UF [mg/h]
                    </th>
                    <th>
                        TMP [mmhg]
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    var cnt = 1;
                    foreach (var session in sessions.OrderBy(s => s.Id))
                    {
                        <tr>
                            <td>
                                @cnt
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => session.QBDose)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => session.QDDose)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => session.Predilution)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => session.Postdilution)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => session.UFDose)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => session.TMP)
                            </td>
                        </tr>
                        cnt++;
                    }
                }
            </tbody>
        </table>
    }
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Wróć do listy</a>
    </form>
</div>
