@model apka2.Models.Procedure

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Procedure</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SurveyId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SurveyId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProcedureDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProcedureDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ECMO)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ECMO)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Filter)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Filter)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProcedureTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProcedureTime)
        </dd>
        @if (Model.Anticoagulation != "Cytrynian")
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ExtracorporealClearingMethod)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ExtracorporealClearingMethod)
            </dd>
        } else
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CitrateConcentrate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CitrateConcentrate)
            </dd>
        }

        @if (Model.WasEnded)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UnplanedTermination)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UnplanedTermination)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TerminationReason)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TerminationReason)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BloodReturn)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BloodReturn)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PatientDeath)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PatientDeath)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DeathDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DeathDate)
            </dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Remarks)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Remarks)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

@if (!Model.WasEnded)
{
    <p><a asp-action="End" asp-route-id="@Model?.Id">Zakończ zabieg</a></p>
}
