@model apka2.Models.Doctor

@{
    ViewData["Title"] = "MyAccount";
}

<h4>Moje konto</h4>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class="col-sm-2">
            Imię (imiona)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name) @Html.DisplayFor(model => model.SecondName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
    </dl>
</div>

<p>
    <a asp-controller="Doctors" asp-action="Delete" methods="get" class="btn btn-danger">Usuń konto</a> |
    <a asp-controller="Doctors" asp-action="LogOut" methods="get">Wyloguj się</a>
</p>